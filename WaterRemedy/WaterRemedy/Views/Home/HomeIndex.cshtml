    <script>
    $(function () {
        changeClass();
    });
 
    //浏览器的窗口大小发生改变时执行
    $(window).resize(function () {
        //执行代码块
        changeClass();
    });
 
    //当屏幕小于1400时添加一个属性，大于的时候删除属性
        function changeClass() {
            var back1 = document.getElementById("back1");
            var back2 = document.getElementById("back2");
            var real1 = document.getElementById("indoor");
            var real2 = document.getElementById("outdoor");
            let ww = $(window).height();

            if (ww > 600) {
                back1.style.visibility = "hidden";
                back2.style.visibility = "hidden";
                real1.style.visibility = "visible";
                real2.style.visibility = "visible";
            } else if (ww < 600) {
                back1.style.visibility = "visible";
                back2.style.visibility = "visible";
                real1.style.visibility = "hidden"
                real2.style.visibility = "hidden"
	        }
    }
    </script>

